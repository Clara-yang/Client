                                    Command="{Binding SetCloudTypeCommand}" CommandParameter="0"
                                    cuc:ButtonHelper.IsSelected="{Binding CloudType1,Converter={StaticResource Value2BoolCov},ConverterParameter=0}" />
                        </StackPanel>
                    </Border>
